<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/list_item_icon"
           android:src="@mipmap/ic_launcher"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="10dp"
           android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@+id/list_item_icon"
            android:text="username"
            android:textSize="16sp"
            android:textColor="#878787"
            android:layout_centerVertical="true"
            android:id="@+id/list_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:id="@+id/list_item_watching"
            android:gravity="center"
            android:text="+关注"
            android:textSize="16sp"
            android:textColor="#878787"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/textview_shape"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/list_item_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Before"
                android:textColor="#fff"
                android:background="#AAA"
                android:id="@+id/list_item_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/list_item_img1"
                android:alpha="0.8"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/list_item_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Before"
                android:textColor="#fff"
                android:background="#AAA"
                android:id="@+id/list_item_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/list_item_img2"
                android:alpha="0.8"
                />
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:text="content"
        android:textSize="16sp"
        android:textColor="#878787"
        android:id="@+id/list_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
    android:id="@+id/list_item_tag_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/list_item_tag_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/list_item_watcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>
        <TextView
            android:padding="5dp"
            android:layout_toRightOf="@+id/list_item_watcher"
            android:layout_centerVertical="true"
            android:text="123"
            android:textSize="16sp"
            android:textColor="#878787"
            android:id="@+id/list_item_watcher_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
</LinearLayout>